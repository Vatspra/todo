# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# MongoDB Atlas Configuration
# Replace <username>, <password>, <cluster-url>, and <database-name> with your actual values
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority

# Example MongoDB Atlas URI:
# MONGODB_URI=mongodb+srv://myuser:mypassword@cluster0.abc123.mongodb.net/todo-app?retryWrites=true&w=majority

# For local MongoDB development (alternative):
# MONGODB_URI=mongodb://localhost:27017/todo-app

# Database Configuration
DB_NAME=todo-app

# API Configuration
API_VERSION=v1

# Security (optional - for production)
JWT_SECRET=your-jwt-secret-key-here 